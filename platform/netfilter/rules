*filter
:INPUT DROP [0:0]
:FORWARD DROP [0:0]
:OUTPUT ACCEPT [0:0]

# LOOPBACK
-A INPUT -s 127.0.0.1 -j ACCEPT
-A INPUT -i lo -j ACCEPT
# MY HOME
-A INPUT -s 113.162.170.186/32 -j ACCEPT

# ALLOW SELF-ATTEMPTED-TRAFFIC
-I INPUT -m state --state ESTABLISHED,RELATED -j ACCEPT

# ESSENTIAL PUBLIC SERVICES [ICMP, SSH]
-A INPUT -p icmp --icmp-type any -j ACCEPT
-A INPUT -p tcp -m multiport --dport 22 -s 0.0.0.0/0 -j ACCEPT

# SIP/RTP SERVICE FOR VENDOR
-A INPUT -p udp --dport 5060 -m set --match-set sipset src -j ACCEPT
-A INPUT -p tcp --dport 5060 -m set --match-set sipset src -j ACCEPT
-A INPUT -p tcp --dport 5061 -m set --match-set sipset src -j ACCEPT
-A INPUT -p udp --dport 10000:60000 -m set --match-set rtpset src -j ACCEPT

